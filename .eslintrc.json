{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            2, "tab"
        ],
		"no-tabs": 0,
		"prefer-template": "error",
		"no-useless-concat": "error",
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "camelcase": "off" // TODO: remove
    }
}